@model IEnumerable<EntityLayer.Concrete.Image>

@{
    ViewData["Title"] = "Images";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}
<div class="row justify-content-center">

    <div class="col-md-7">
        <div class="row mb-5">
            <div class="col-12 ">
                <h2 class="site-section-heading text-center">@ViewBag.header</h2>
            </div>
        </div>
    </div>

</div>

<div class="row" id="lightgallery">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3 item" data-aos="fade" data-src="@item.ImageUrl" data-sub-html="<h4>Fading Light</h4><p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolor doloremque hic excepturi fugit, sunt impedit fuga tempora, ad amet aliquid?</p>">
            <a href="#"><img src="@item.ImageUrl" alt="IMage" class="img-fluid"></a>
        </div>
    }
</div>



